<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8"
            android:weightSum="3"

            >

            <TextView
                android:id="@+id/firstTeam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingEnd="@dimen/dp_4"
                android:paddingStart="@dimen/dp_4"
                android:text="Naciosm,m ddcd"
                android:textSize="@dimen/defult_text_size"


                />

            <ImageView
                android:id="@+id/firstTeamImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/teamImageSmall"
                android:layout_weight=".25"
                android:contentDescription="@string/team_1"
                android:gravity="center"
                android:paddingEnd="@dimen/dp_4"
                android:paddingStart="@dimen/dp_4"
                android:src="@drawable/sb"

                />

            <TextView
                android:id="@+id/result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@color/result_color"
                android:gravity="center"
                android:text="1 : 2"
                android:textSize="@dimen/defult_text_size"
                android:textStyle="bold"


                />

            <ImageView
                android:id="@+id/secondTeamImage"
                android:layout_width="0dp"
                android:layout_height="@dimen/teamImageSmall"
                android:layout_weight=".25"
                android:contentDescription="@string/ayway_team"
                android:gravity="center"
                android:paddingEnd="@dimen/dp_4"
                android:paddingStart="@dimen/dp_4"
                android:src="@drawable/sb"

                />

            <TextView
                android:id="@+id/secondTeam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="@dimen/dp_4"
                android:paddingStart="@dimen/dp_4"
                android:text="Naciosm,m ddcd"
                android:textSize="@dimen/defult_text_size"


                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/layout_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8"
            android:weightSum="3">

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="@dimen/dp_4"
                android:textSize="@dimen/defult_text_size"


                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="@dimen/dp_4"
                android:text="States"
                android:textSize="@dimen/defult_text_size"


                />


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

