<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8">

    <LinearLayout
        android:id="@+id/holder_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/position_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:textColor="@color/black"
            android:textSize="@dimen/defult_text_size"

            />

        <ImageView
            android:id="@+id/team_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/teamImageSmall"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_weight=".4"
            android:contentDescription="@string/league_image"
            android:src="@drawable/sb" />

        <TextView
            android:id="@+id/teamName_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:textColor="@color/black"
            android:textSize="@dimen/defult_text_size"

            />

        <TextView
            android:id="@+id/win_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:textSize="@dimen/defult_text_size"

            />

        <TextView
            android:id="@+id/draes_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:textSize="@dimen/defult_text_size"

            />

        <TextView
            android:id="@+id/loses_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:textSize="@dimen/defult_text_size" />

        <TextView
            android:id="@+id/pts_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:textColor="@color/black"
            android:textSize="@dimen/defult_text_size"

            />

    </LinearLayout>

</android.support.v7.widget.CardView>